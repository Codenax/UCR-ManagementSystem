            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
    <!-- start: page ---------------------------------------//////////////------------------------>
    <div class="row">
        <div class="col-md-10">
            <form method="POST" id="form" class="form-horizontal">
                <section class="panel-dark">
                    <header class="panel-heading" style="background-color: #34495E">
                        <h2 class="panel-title">Allocate&ensp;Classrooms</h2> <!--save departments information-->
                        <p class="panel-subtitle">
                            Enter Information.
                        </p>
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(c => c.DepartmentId, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.DropDownListFor(c => c.DepartmentId, Model.DepartmentSelectListItems, "Select...", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.DepartmentId, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(c => c.CourseId, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.DropDownListFor(c => c.CourseId, Model.CoursetSelectListItems, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.CourseId, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(c => c.RoomNo, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.DropDownList("RoomNo", new List<SelectListItem>()
                                                {
                                                new SelectListItem {Text = "A-201", Value="R.No:A-201"},
                                                new SelectListItem {Text = "A-202", Value="R.No:A-202"},
                                                new SelectListItem {Text = "A-203", Value="R.No:A-203"},
                                                new SelectListItem {Text = "B-301", Value="R.No:B-301"},
                                                new SelectListItem {Text = "B-302", Value="R.No:B-302"},
                                                new SelectListItem {Text = "B-303", Value="R.No:B-303"},
                                                new SelectListItem {Text = "C-401", Value="R.No:C-401"},
                                                }, "Select...", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.RoomNo, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(c => c.Day, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.DropDownList("Day", new List<SelectListItem>()
                                                {
                                                new SelectListItem {Text = "Sunday", Value="Sun"},
                                                new SelectListItem {Text = "Monday", Value="Mon"},
                                                new SelectListItem {Text = "Tuesday", Value="Tue"},
                                                new SelectListItem {Text = "Wednesday", Value="Wed"},
                                                new SelectListItem {Text = "Thursday", Value="Thur"},
                                                new SelectListItem {Text = "Friday", Value="Fri"},
                                                new SelectListItem {Text = "Saturday", Value="Sat"},
                                                }, "Select...", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Day, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(c => c.FromTime, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @*@Html.TextBoxFor(c => c.FromTime, new { @class = "form-control", @readonly = "readonly", placeholder = "---View---" })*@
                                    @Html.EditorFor(m => m.FromTime)
                                    @Html.ValidationMessageFor(c => c.FromTime, null, new { @class = "text-danger" })
                                    @*<input type="time" name="time" placeholder="hrs:mins" pattern="^([0-1]?[0-9]|2[0-4]):([0-5][0-9])(:[0-5][0-9])?$" class="inputs time" required>
                                        <input id="Am/Pm" type="radio" name="Am/Pm" value="AM"> AM
                                        <input id="Am/Pm" type="radio" name="Am/Pm" value="PM"> PM*@
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(c => c.ToTime, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.EditorFor(m => m.ToTime)
                                    @Html.ValidationMessageFor(c => c.ToTime, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer" style="background-color: #dfebf7">
                        <div class="row">
                            <div class="col-sm-5" style="text-align:right">
                                <input type="submit" class="btn btn-primary" value="Allocate" />
                            </div>
                            <div class="col-sm-6">
                                @if (ViewBag.SACMessage != null)
                                {
                                    <h5 style="color: green; font-weight: bold">@ViewBag.SACMessage</h5>
                                }
                                @if (ViewBag.FACMessage != null)
                                {
                                    <h5 style="color: red; font-weight: bold">@ViewBag.FACMessage</h5>
                                }
                            </div>
                        </div>
                    </footer>
                    <footer class="panel-footer" style="background-color: #34495E"></footer>
                </section>
            </form>
        </div>
    </div>
    <!-- end: page -//////////////////////////////////////////////////////------------------------>>
