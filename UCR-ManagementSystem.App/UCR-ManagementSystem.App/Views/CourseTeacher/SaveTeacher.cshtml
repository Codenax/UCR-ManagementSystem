<section role="main" class="content-body">
    <header class="page-header">
        <h2>Save Teacher</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="~/Dashboard/Dashboard">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Course & Teacher Info / Save Teacher</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -////////////////////////////////////--------------------->
    <div class="row">
        <div class="col-md-12">
            <form method="POST" id="form" class="form-horizontal">
                <section class="panel-dark">
                    <header class="panel-heading" style="background-color: #34495E">
                        <h2 class="panel-title">Save&ensp;Teachers&ensp;Information</h2> <!--save departments information-->
                        <p class="panel-subtitle">
                            Enter Teacher Information.
                        </p>
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            @*<label class="col-sm-2 control-label" style="font-weight:bold">Course Code <span class="required">*</span></label>*@
                            @Html.LabelFor(c => c.TeacherName, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })


                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-keyboard-o"></i>
                                    </span>
                                    @* <input type="number" name="CourseCode" class="form-control" placeholder="eg.: 334646534" required />*@
                                    @Html.TextBoxFor(c => c.TeacherName, null, new { @class = "form-control", placeholder = "eg.: Kamal Uddin Hazari" })
                                    @Html.ValidationMessageFor(c => c.TeacherName, null, new { @class = "text-danger" })


                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label class="col-sm-2 control-label" style="font-weight:bold">Course Name<span class="required">*</span></label>*@
                            @Html.LabelFor(c => c.Address, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @*<input type="text" name="CourseName" class="form-control" placeholder="eg.: CSS" required />*@
                                    @Html.TextAreaFor(c => c.Address,new { @class = "form-control", placeholder = "eg.: Ulipur,Kurigram" })
                                    @Html.ValidationMessageFor(c => c.Address, null, new { @class = "text-danger" })


                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label class="col-sm-2 control-label" style="font-weight:bold">Credit<span class="required">*</span></label>*@
                            @Html.LabelFor(c => c.Email, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @*<input type="number" name="CourseCredit" class="form-control" placeholder="eg.: CSS" required />*@
                                    @Html.TextBoxFor(c => c.Email, null, new { @class = "form-control", placeholder = "eg.: jb@hotmail.com" })
                                    @Html.ValidationMessageFor(c => c.Email, null, new { @class = "text-danger" })


                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label class="col-sm-2 control-label" style="font-weight:bold">Description<span class="required">*</span></label>*@
                            @Html.LabelFor(c => c.ContactNo, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })


                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @*<textarea name="CourseDescription" class="form-control rounded-0" id="exampleFormControlTextarea2" rows="3" placeholder="eg.: CSS" required></textarea>*@
                                    @Html.TextBoxFor(c => c.ContactNo, null, new { @class = "form-control", placeholder = "eg.: 01734567890" })
                                    @Html.ValidationMessageFor(c => c.ContactNo, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label class="col-sm-2 control-label" style="font-weight:bold">Description<span class="required">*</span></label>*@
                            @Html.LabelFor(c => c.Designation, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @*<input type="number" name="Semester" class="form-control" placeholder="eg.: CSS" required />*@
                                    @*@Html.DropDownListFor(c => c.Semester, Model.DepartmentSelectListItems, "Select...", new { @class = "form-control" })*@
                                    @Html.DropDownList("Designation", new List<SelectListItem>()
                                                {
                                                new SelectListItem {Text = "Professor", Value="Professor"},
                                                new SelectListItem {Text = "Associate Professor", Value="Associate Professor"},
                                                new SelectListItem {Text = "Senior Lecturer", Value="Senior Lecturer"},
                                                new SelectListItem {Text = "Lecturer", Value="Lecturer"},
                                                }, "Select...", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Designation, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label class="col-sm-2 control-label" style="font-weight:bold">Description<span class="required">*</span></label>*@
                            @Html.LabelFor(c => c.DepartmentId, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @*<textarea name="CourseDescription" class="form-control rounded-0" id="exampleFormControlTextarea2" rows="3" placeholder="eg.: CSS" required></textarea>*@
                                    @Html.DropDownListFor(c => c.DepartmentId, Model.DepartmentSelectListItems, "Select...", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.DepartmentId, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label class="col-sm-2 control-label" style="font-weight:bold">Course Code <span class="required">*</span></label>*@
                            @Html.LabelFor(c => c.CreditTaken, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })


                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-keyboard-o"></i>
                                    </span>
                                    @* <input type="number" name="CourseCode" class="form-control" placeholder="eg.: 334646534" required />*@
                                    @Html.TextBoxFor(c => c.CreditTaken, null, new { @class = "form-control", placeholder = "eg.: 2234501" })
                                    @Html.ValidationMessageFor(c => c.CreditTaken, null, new { @class = "text-danger" })


                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer" style="background-color: #dfebf7">
                        <div class="row">
                            <div class="col-sm-3" style="text-align:right">
                                <input type="submit" class="btn btn-primary" value="Save " />
                            </div>
                            <div class="col-sm-6">
                                @if (ViewBag.TMessage != null)
                                {
                                    <h5 style="color: green; font-weight: bold">@ViewBag.TMessage</h5>
                                }
                                @if (ViewBag.FMessage != null)
                                {
                                    <h5 style="color: red; font-weight: bold">@ViewBag.FMessage</h5>
                                }
                            </div>
                        </div>
                    </footer>
                    <footer class="panel-footer" style="background-color: #34495E"></footer>
                </section>
            </form>
        </div>
    </div>
    <!-- end: page -/////////////////////////////////////----------------------->
</section>


