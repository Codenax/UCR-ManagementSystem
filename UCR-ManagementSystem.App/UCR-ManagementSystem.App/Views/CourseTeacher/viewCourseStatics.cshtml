    <!-- start: page ---------///////////////////////--------------------------->

    <div class="row">
        <div class="col-md-12">
            <form method="POST" id="form" class="form-horizontal">
                <section class="panel-dark">
                    <header class="panel-heading" style="background-color: #34495E">
                        <h2 class="panel-title">Save&ensp;Departments&ensp;Information</h2> <!--save departments information-->
                        <p class="panel-subtitle">
                            Entry Department Code & Department Name.
                        </p>
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            @*<label class="col-sm-2 control-label" style="font-weight:bold">Description<span class="required">*</span></label>*@
                            @Html.LabelFor(c => c.DepartmentId, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @*<textarea name="CourseDescription" class="form-control rounded-0" id="exampleFormControlTextarea2" rows="3" placeholder="eg.: CSS" required></textarea>*@
                                    @Html.DropDownListFor(c => c.DepartmentId, Model.DepartmentSelectListItemsViewCourseStatics, "Select...", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.DepartmentId, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                                <section class="panel-dark">
                                    <header class="panel-heading" style="background-color: #34495E">
                                        <h6 class="panel-title">Course&ensp;Informations</h6>
                                    </header>
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table id="blogTable" class="table table-bordered mb-none">
                                                <thead>
                                                    <tr style="background-color:#dfebf7">                                                       
                                                        <th>Course Code</th>
                                                        <th>Course Name</th>
                                                        <th>Course Semester</th>
                                                        <th>Assing To</th>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <footer class="panel-footer" style="background-color: #34495E"></footer>
                                </section>                          
                        </div>
                    </div>               
                </section>
            </form>
