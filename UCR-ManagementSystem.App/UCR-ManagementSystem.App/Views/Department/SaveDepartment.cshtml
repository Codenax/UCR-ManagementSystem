                        </ol>

                        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
                    </div>
                </header>
                <!-- start: page -->
                <div class="row">
                    <div class="col-md-12">
                        <form method="POST" id="form"  class="form-horizontal">
                            <section class="panel-dark">
                                <header class="panel-heading" style="background-color: #34495E">
                                    <h2 class="panel-title">Save&ensp;Departments&ensp;Information</h2> <!--save departments information-->
                                    <p class="panel-subtitle">
                                        Entry Department Code & Department Name.
                                    </p>
                                </header>
                                <div class="panel-body">
                                    <div class="form-group">
                                        @*<label class="col-sm-2 control-label" style="font-weight:bold">Department Code<span class="required">*</span></label>*@
                                        @Html.LabelFor(c => c.DepartmentCode, htmlAttributes: new { @class = "control-label col-md-2", style="font-weight:bold"})

                                        <div class="col-sm-10">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-keyboard-o"></i>
                                                </span>
                                                @*<input type="number" name="DepartmentCode" class="form-control" placeholder="eg.: 334646534" required />*@
                                                @Html.TextBoxFor(c => c.DepartmentCode, null, new { @class = "form-control", placeholder = "eg.: 2234501" })
                                                @Html.ValidationMessageFor(c => c.DepartmentCode, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @*<label class="col-sm-2 control-label" style="font-weight:bold">Department Name<span class="required">*</span></label>*@
                                        @Html.LabelFor(c => c.DepartmentName, htmlAttributes: new { @class = "control-label col-md-2", style="font-weight:bold"})


                                        <div class="col-sm-10">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-edit"></i>
                                                </span>
                                                @*<input type="text" name="DepartmentName" class="form-control" placeholder="eg.: CSS" required />*@
                                                @Html.TextBoxFor(c => c.DepartmentName, null, new { @class = "form-control", placeholder = "eg.: Computer Secince"})
                                                @Html.ValidationMessageFor(c => c.DepartmentName, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <footer class="panel-footer" style="background-color: #dfebf7">
                                    <div class="row">
                                        <div class="col-sm-3" style="text-align:right">
                                            <input type="submit" class="btn btn-primary" value="Save " />
                                        </div>
                                        <div class="col-sm-6">
                                            @if (ViewBag.SMessage != null)
                                            {
                                                <h5 style="color: green; font-weight: bold">@ViewBag.SMessage</h5>
                                            }
                                            @if (ViewBag.EMessage != null)
                                            {
                                                <h5 style="color: red; font-weight: bold">@ViewBag.EMessage</h5>
                                            }
                                        </div>
                                        </div>
                                </footer>
                                <footer class="panel-footer" style="background-color: #34495E"></footer>

                            </section>
                        </form>
