            <section role="main" class="content-body">
                <header class="page-header">
                    <h2>View All Department</h2>
                    <div class="right-wrapper pull-right">
                        <ol class="breadcrumbs">
                            <li>
                                <a href="dashboard.html">
                                    <i class="fa fa-home"></i>
                                </a>
                            </li>
                            <li><span>Department Information / View All Department </span></li>
                        </ol>
                        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
                    </div>
                </header>
                <!-- start: page -->             
                <div class="row">
                    <div class="col-md-12">
                        <form id="form" action="forms-validation.html" class="form-horizontal">
                            <section class="panel-dark">
                                <header class="panel-heading" style="background-color: #34495E">
                                    <h2 class="panel-title">All&ensp;Department&ensp;Informations</h2>
                                </header>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered mb-none">
                                            <thead>
                                                <tr style="background-color:#dfebf7">
                                                    <th>SL</th>
                                                    <th>Department Code</th>
                                                    <th>Department Name</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{ int i = 1; }                                             
                                                @if (Model != null && Model.DepartmentList != null && Model.DepartmentList.Count > 0)
                                                {                                         
                                                    foreach (var department in Model.DepartmentList)
                                                    {                                                      
                                                        <tr>                                                           
                                                            <td><label>@i</label> @{ i++; }</td>
                                                            <td>@department.DepartmentCode</td>
                                                            <td>@department.DepartmentName</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <footer class="panel-footer" style="background-color: #34495E"></footer>
                            </section>
                        </form>
                    </div>

                </div>
                <!-- end: page -->
            </section>
             <!-- end: Content-body -->