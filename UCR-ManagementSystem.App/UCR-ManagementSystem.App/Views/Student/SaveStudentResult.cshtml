<section role="main" class="content-body" style="background-color: #F0FFFF">
    <header class="page-header">
        <h2>Save Students Result</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="~/Dashboard/Dashboard">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Student Result / Save Student Result</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
    <!-- start: page ---------///////////////////////--------------------------->

    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <form method="POST" id="form" class="form-horizontal">
                <section class="panel-dark">
                    <header class="panel-heading" style="background-color: #34495E">
                        <h2 class="panel-title">Save&ensp;Student&ensp;Result</h2> <!--save departments information-->
                        <p class="panel-subtitle">
                            Enter Information.
                        </p>
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(c => c.StudentId, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.DropDownListFor(c => c.StudentId, Model.RegistrationNumberList, "Select...", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.StudentId, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(c => c.StudentName, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.TextBoxFor(c => c.StudentName, new { @class = "form-control", @readonly = "readonly", placeholder = "---View---" })
                                    @Html.ValidationMessageFor(c => c.StudentName, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(c => c.StudentEmail, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.TextBoxFor(c => c.StudentEmail, new { @class = "form-control", @readonly = "readonly", placeholder = "---View---" })
                                    @Html.ValidationMessageFor(c => c.StudentEmail, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(c => c.DepartmentName, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.TextBoxFor(c => c.DepartmentName, new { @class = "form-control", @readonly = "readonly", placeholder = "---View---" })
                                    @Html.ValidationMessageFor(c => c.DepartmentName, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(c => c.CourseId, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.DropDownListFor(c => c.CourseId, Model.CoursetSelectListItems, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.CourseId, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(c => c.GradeLetter, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                    @Html.DropDownList("GradeLetter", new List<SelectListItem>()
                                                {
                                                new SelectListItem {Text = "A+", Value="A+"},
                                                new SelectListItem {Text = "A", Value="A"},
                                                new SelectListItem {Text = "A-", Value="A-"},
                                                new SelectListItem {Text = "B+", Value="B+"},
                                                new SelectListItem {Text = "B", Value="B"},
                                                new SelectListItem {Text = "B-", Value="B-"},
                                                new SelectListItem {Text = "C+", Value="C+"},
                                                new SelectListItem {Text = "C", Value="C"},
                                                new SelectListItem {Text = "C-", Value="C-"},
                                                new SelectListItem {Text = "D+", Value="C+"},
                                                new SelectListItem {Text = "D", Value="D"},
                                                new SelectListItem {Text = "D-", Value="D-"},
                                                new SelectListItem {Text = "F", Value="F-"},
                                                }, "Select...", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.GradeLetter, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer" style="background-color: #dfebf7">
                        <div class="row">
                            <div class="col-sm-3" style="text-align:right">
                                <input type="submit" class="btn btn-primary" value="Save " />
                            </div>
                            <div class="col-sm-6">
                                @if (ViewBag.SSRmessage != null)
                                {
                                    <h5 style="color: green; font-weight: bold">@ViewBag.SSRmessage</h5>
                                }
                                @if (ViewBag.SSFmessage != null)
                                {
                                    <h5 style="color: red; font-weight: bold">@ViewBag.SSFmessage</h5>
                                }
                            </div>
                        </div>
                    </footer>
                    <footer class="panel-footer" style="background-color: #34495E"></footer>
                </section>
            </form>
        </div>
    </div>

    <!-- end: page -------------///////////////////////////----------------------->
</section>
@section Scripts{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/CourseTeacher/SaveStudentResult.js"></script>

}